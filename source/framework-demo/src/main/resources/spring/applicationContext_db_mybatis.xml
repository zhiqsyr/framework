<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- MyBatis 分页插件 -->
	<bean id="orderablePaginationPlugin" class="org.cloud.dao.framework.mybatis.plugin.OrderablePaginationPlugin">
		<property name="properties">
			<props>
				<prop key="dialect">${dialect}</prop>
			</props>
		</property>
	</bean>	
	
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="org.cloud.demo.dao.mybatis" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" />
	</bean>		
	
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
 		<property name="typeAliasesPackage" value="org.cloud.demo.entity" />
 		<property name="mapperLocations" value="classpath:mybatis/*Dao.xml" />
		<property name="plugins">		<!-- 加载分页插件 -->
			<array>
				<ref bean="orderablePaginationPlugin" />
			</array>
		</property> 		
	</bean> 
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>
	
	<context:property-placeholder location="classpath:jdbc/jdbc.properties" />	
	
</beans>
